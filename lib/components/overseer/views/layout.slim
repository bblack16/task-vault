css:

  .middle {
    margin-left: auto;
    margin-right: auto;
  }

  table td {
    padding: 4px;
  }

  table th {
    padding: 4px;
  }

  body {
    font-family:Arial, Helvetica, sans-serif;
    background-color: rgb(201, 201, 201) !important;
    color: rgba(38, 38, 38, 1);
    font-weight: 200;
  }

  .text_3d {
    text-shadow: 0 1px 0 #ccc,
                 0 2px 0 #c9c9c9,
                 0 3px 0 #bbb,
                 0 4px 0 #b9b9b9,
                 0 5px 0 #aaa,
                 0 6px 1px rgba(0,0,0,.1),
                 0 0 5px rgba(0,0,0,.1),
                 0 1px 3px rgba(0,0,0,.3),
                 0 3px 5px rgba(0,0,0,.2),
                 0 5px 10px rgba(0,0,0,.25),
                 0 10px 10px rgba(0,0,0,.2),
                 0 20px 20px rgba(0,0,0,.15);
  }

  #content {
    margin-left: auto;
    margin-right: auto;
    padding-left: 25px;
    padding-right: 25px;
    padding-top: 100px;
    max-width: 1400px;
    min-height: 90%;
    background-color: rgb(250, 250, 250);
    box-shadow: 2px 2px 10px;
  }

  #footer {
    width: 100%;
    position: fixed;
    bottom: 0px;
    background-color: rgb(21, 66, 85);
    font-size: 80%;
    padding: 4px;
  }

  .red { color: red }
  .white { color: white }
  .black { color: black }
  .green { color: green }
  .blue { color: blue }
  .bold { font-weight: bold }

  #o_alert {
    color: white;
    padding: 5px;
    padding-left: 20px;
    padding-right: 20px;
    bottom-border 2px solid black;
    font-size: 140%;
    position: relative;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 99;
    display: none;
  }

  #alert_close {
    position: absolute;
    right: 10;
    text-shadow: 1px 1px 1px black;
    top: 5;
    color: rgb(252, 236, 236);
  }

  #alert_close:hover {
    color: rgb(244, 229, 229);
    text-shadow: 2px 2px 2px black;
    cursor: pointer;
  }

doctype html
html
  head
    title TaskVault
    == javascript_tag('application.js')
    link rel="stylesheet" href="/assets/bootstrap"
    link rel="stylesheet" href="/assets/datatables_bootstrap"
    script type="text/javascript" Opal.modules["javascript/application"](Opal)
  body
    #params json="#{params.to_h.merge(session[:params] || {}).merge(route: env['PATH_INFO']).to_json}"
    - session[:params]&.delete(:alert) if session
    == slim :menu
    #content
      == yield
    br
    br
    #footer.text-center.white.bold
      span = "TaskVault (version #{TaskVault::VERSION})   -   Health: #{TaskVault::Overseer::Server.parent.health}  -  "
      spand#time.center Loading current time... Give me a sec...
