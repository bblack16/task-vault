css:

  table.default {
    font-family:Arial, Helvetica, sans-serif;
    color:#666;
    background:#eaebec;
    border:#ccc 1px solid;
    width: 100%;
  }

  table.default th {
    padding:21px 25px 22px 25px;
    background: #a4a4a4;
    color: rgb(233, 233, 233);
  }

  table.default tr {
    text-align: center;
    padding-left:20px;
  }

  table.default td:first-child {
    text-align: left;
    padding-left:20px;
    border-left: 0;
  }

  table.default td {
    padding:18px;
    background: #fafafa;
  }

  table.default tr:last-child td {
    border-bottom:0;
  }

  table.default tr:hover td {
    background: #f2f2f2;
  }

  .middle {
    margin-left: auto;
    margin-right: auto;
  }

  body {
    font-family:Arial, Helvetica, sans-serif;
    background-color: #1c2d33;
    color: rgba(255, 255, 255, 0.75);
    font-weight: 200;
  }

  .text_3d {
    text-shadow: 0 1px 0 #ccc,
                 0 2px 0 #c9c9c9,
                 0 3px 0 #bbb,
                 0 4px 0 #b9b9b9,
                 0 5px 0 #aaa,
                 0 6px 1px rgba(0,0,0,.1),
                 0 0 5px rgba(0,0,0,.1),
                 0 1px 3px rgba(0,0,0,.3),
                 0 3px 5px rgba(0,0,0,.2),
                 0 5px 10px rgba(0,0,0,.25),
                 0 10px 10px rgba(0,0,0,.2),
                 0 20px 20px rgba(0,0,0,.15);
  }

  #content {
    padding-left: 10%;
    padding-right: 10%;
  }

  #footer {
    width: 100%;
    position: fixed;
    bottom: 0px;
    background-color: rgb(21, 66, 85);
    font-size: 80%;
    padding: 4px;
  }

  .badge {
    border-radius: 5px;
    height: 25px;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 5px;
    text-align: center;
    vertical-align: middle;
  }

  .red { color: red }
  .white { color: white }
  .black { color: black }
  .green { color: green }
  .blue { color: blue }
  .bold { font-weight: bold }

doctype html
html
  head
    title My Slim Templates App
  body
    == slim :menu
    #content
      == yield
    br
    br
    #footer.center.white.bold = "TaskVault (version #{TaskVault::VERSION})   -   Health: #{TaskVault::Overseer::Server.parent.health}"
